---
import Section from './Section.astro';
import {skills} from '../../cv.json'
---

<Section title="Skills">
    <ul>
        {skills.map(({name}) => {
             return (
                 <li>
                    <span>{name}</span>    
                </li>
             )
        })}
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    li {
        border-radius: 6px;
        background: #afafaf;
        border: 1px solid #9e9e9ead;
        color: black;
        display: flex;
        align-items: center;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
        gap: 4px;
    }

    @media (width <= 768px) {
        ul {
            padding: 12px;
        }
    }
</style>